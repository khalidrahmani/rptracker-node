<% include ../layouts/header %>
<div class="container-fluid">
   <hr>
   <section>
      <div class="page-header">
         <h1> <small><%= site.isNew? "New": "Edit"%> Site</small></h1>
      </div>
      <div class="row-fluid">
         <div class="span6">
            
            <form novalidate="novalidate" method="post" class="simple_form form-horizontal" action="/phones/create" accept-charset="UTF-8">
               <fieldset>
                  <div class="control-group url required">
                    <label class="url required control-label">Website URL</label>
                    <div class="controls"><input type="text" size="50" name="website_url" id="website_url" class="string url required input-xlarge"></div>
                  </div>
                  <div class="control-group url optional">
                    <label class="url optional control-label">Third party url</label>
                    <div class="controls"><input type="text" size="50" name="third_party_url" id="third_party_url" class="string url optional input-xlarge "></div>
                  </div>
                  <div class="control-group url optional">
                    <label class="url optional control-label">Post Back URL</label>
                    <div class="controls">
                     <input type="text" size="50" value="<%= site.post_back_url %>" name="post_back_url" id="post_back_url" class="string url optional input-xlarge ">
                    </div>
                  </div>
                  <div class="control-group boolean optional">
                    <label class="boolean optional control-label">Enable Third Party URL</label>
                    <div class="controls"><label class="checkbox"><input type="checkbox" name="third_party_url_enabled" id="third_party_url_enabled" class="boolean optional"></label></div>
                  </div>
                  <div class="control-group string optional">
                    <label class="string optional control-label">Call Tracking API Key</label>
                    <div class="controls"><input type="text" size="50" name="call_tracking_api_key" id="call_tracking_api_key" class="string optional input-xlarge"></div>
                  </div>
                  <div class="control-group optional">
                    <label class="optional control-label">Default Phone</label>
                    <div class="controls"><input type="text" size="50" name="default_phone" id="default_phone" class="string optional"></div>
                  </div>
                  <div class="control-group string optional">
                    <label class="string optional control-label">Default Destination Number</label>
                    <div class="controls"><input type="text" size="50" name="default_number_destination" id="default_number_destination" class="string optional"></div>
                  </div>
                  <div class="control-group select required">
                    <label class="select required control-label">Phones distribution method</label>
                    <div class="controls">
                      <select name="phones_distribution_method" id="phones_distribution_method" class="select required">
                        <option value=""></option>
                        <option value="PhoneNumberPerVisitor">Phone number per visitor</option>
                        <option value="PhoneNumberPerKeyword">Phone number per keyword</option>
                      </select>
                    </div>
                  </div>
                  <div class="control-group">
                  <label for="input01" class="control-label"> </label>
                  <div class="controls">
                        <button class="btn btn-primary" type="submit">
                           Save 
                        </button> 
                        <a href="/" class="btn"> cancel </a>                       
                     </div>
                  </div>                                
               </fieldset>
            </form>
         </div>
      </div>
      <div class="row-fluid"></div>
   </section>
</div>
<% include ../layouts/footer %>
