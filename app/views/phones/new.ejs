<% include ../layouts/header %>
<div class="container-fluid">
   <hr>
   <section>
      <div class="page-header">
         <h1> <small> Load new numbers </small></h1>
      </div>
      <div class="row-fluid">
         <div class="span6">
            
            <form novalidate="novalidate" method="post" class="simple_form form-horizontal" action="/phones/create" accept-charset="UTF-08">
               <fieldset>
                  <div class="control-group url">
                    <label class="url control-label">Website URL</label>
                    <div class="controls">
						<select name="website" id="website" class="select">
	                        <option value="">Select</option>
	                        <% if (typeof sites != 'undefined') { %>	
		                        <% sites.forEach(function(site){ %> 
		                        	<option value=<%= site.id %>><%= site.website_url %></option>
		                        <% }) %>
	                        <% }  %>
	                      </select>
                    </div>
                  </div>
                  <div class="control-group url">
                    <label class="url control-label">Quantity</label>
                    <div class="controls">

						<select name="quantity" id="quantity" class="select required">
							<option value="">Select</option>
							<% for(var i=1; i<66; i++){%>
	                        	<option value=<%= i %>> <%= i %> </option>	                        
	                        <% } %>
	                      </select>
                    </div>
                  </div>
                  <div class="control-group url optional">
                    <label class="url optional control-label">Destination</label>
                    <div class="controls"><input type="text" size="50" name="third_party_url" id="third_party_url" class="string url optional"></div>
                  </div>
                  <div class="control-group boolean optional">
                    <label class="boolean optional control-label">Activate immediately</label>
                    <div class="controls"><label class="checkbox"><input type="checkbox" name="third_party_url_enabled" id="third_party_url_enabled" class="boolean optional"></label></div>
                  </div>
                  <div class="control-group">
                  <label for="input01" class="control-label"> </label>
                  <div class="controls">
                        <button class="btn btn-primary" type="submit">
                           Ok 
                        </button> 
                        <a href="/phones" class="btn"> cancel </a>                       
                     </div>
                  </div>                                
               </fieldset>
            </form>
         </div>
      </div>
      <div class="row-fluid"></div>
   </section>
</div>
<% include ../layouts/footer %>
